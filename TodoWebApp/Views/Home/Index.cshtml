@{
    ViewData["Title"] = "Todo Sample App";
}

<div ng-controller="TodoController" ng-init="refresh()">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2 text-center">
                <h2>Todo List</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <form class="col-xs-12 center-block">
                    <div class="col-xs-6 form-group">
                        <input id="txtAdd" type="text" class="form-control" placeholder="Add Todo" ng-model="item" />
                    </div>
                    <button id="btnAdd" class="btn btn-primary" ng-click="add(item)">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        Add
                    </button>
                </form>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <div class="row">
                    <div class="col-xs-4">
                        Click to add Todo
                    </div>
                </div>
                <div class="row top-buffer" ng-repeat="todo in todoList.data">
                    <div class="col-xs-8">
                        <button class="btn btn-info text-left btn-block" ng-click="add(todo.id)">
                            <span class="badge pull-right">
                                {{todo.name}}
                            </span>
                        </button>
                        <br />
                    </div>
                 @*   <div class="col-xs-4">
                        <button class="btn btn-danger pull-right btn-block" ng-click="remove(todo.id)">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            Remove
                        </button>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
</div>